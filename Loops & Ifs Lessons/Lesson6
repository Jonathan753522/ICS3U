#Modify 1:
str = "#"
for i in range(10, 0, -1):
  strt = str * i
  
  print(strt)

#Modify 2:
str = "#"
Spaces = 4
for i in range(1, 11, 2):
  strt = str * i
  
  print(" " * Spaces, strt)
  Spaces -= 1

#Modify 3:
str = "#"
Spaces = 4
for i in range(1, 11, 2):
  strt = str * i
  
  print(" " * Spaces, strt)
  Spaces -= 1

Spaces = 0
for t in range(9, 0, -2):
  string = str * t
  
  print(" " * Spaces, string)
  Spaces += 1
