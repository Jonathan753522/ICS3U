import math

x = input("Please input a whole number: ")
x = int(x)
y = input("Please input another nonzero whole number")
y = int(y)
print("Now deciding if", y, "is a factor of", x, "...")
#Modify One
if (y != 0):
  rem = x % y
  if rem == 0:
    print("Yes!", y, "is a factor of", x)
    #Modify Two
else: 
  print("Unfortunetly 0 is not a factor of the chosen number")

#modify Three
import math

x = input("Please input a whole number: ")
x = int(x)
if (x >= 1) and (x <= 20):
  y = input("Please input another nonzero whole number")
  y = int(y)
  if (y >= 1) and (y <= 20):
    print("Now deciding if", y, "is a factor of", x, "...")
   
    if (y != 0):
      rem = x % y
      if rem == 0:
       print("Yes!", y, "is a factor of", x)
        
else: 
  print("Unfortunetly The Number Input Is Not Within Range")
